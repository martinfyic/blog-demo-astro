---
import { getCollection } from 'astro:content';

import MainLayout from '@/layouts/MainLayout.astro';
import { siteConfig } from '@/config/site-config';
import AuthorCard from '@/components/blog/AuthorCard.astro';

const authors = await getCollection('author');
---

<MainLayout
	title='Listado de autores'
	description='Listado de todos los autores de este blog'
>
	<section class='bg-white dark:bg-gray-900'>
		<div class='container mx-auto px-6 py-10'>
			<h1
				class='text-3xl font-semibold capitalize text-gray-800 lg:text-4xl dark:text-white'
			>
				{siteConfig.title}
			</h1>

			<a href='/blog/1'>Blog paginado</a>

			<div class='mt-8 grid grid-cols-1 gap-8 md:mt-16 md:grid-cols-2'>
				{authors.map(author => <AuthorCard author={author} />)}
			</div>
		</div>
	</section>
</MainLayout>

<style>
	a {
		@apply text-blue-500 hover:underline;
	}
</style>
